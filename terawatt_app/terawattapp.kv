<BoxLayout>:
    canvas:
        Color:
            rgba: 100/255., 195/255., 88/255., 1
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: 'vertical'
    Button:
        text: "Photovoltaic"
        on_press: root.callback_photovoltaic()

    Label:
        font_size: 40
        size_hint: 1.0, 0.35
        text: root.label_photovoltaic

    Button:
        text: "Battery"
        on_press: root.callback_battery()

    Button:
        text: "Car1"
        on_press: root.callback_car1()

    Button:
        text: "Car2"
        on_press: root.callback_car2()

    Button:
        text: "Increment"
        on_press: root.callback_increment()