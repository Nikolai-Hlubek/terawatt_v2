<Notification>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        TextInput:
            id: notification_title
            text: 'Hallo What-The-Hacker'
            size_hint: 1, None
        TextInput:
            id: notification_text
            text: 'Geh doch mal an die frische Luft'
            size_hint: 1, None
        TextInput:
            id: ticker_text
            text: 'New notification'
            size_hint: 1, None

<GoOutNotification>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        TextInput:
            id: notification_title
            text: 'Dear What-The-Hacker'
            size_hint: 1, None
        TextInput:
            id: notification_text
            text: 'Please go for a walk. Exercise is good for you!'
            size_hint: 1, None
        TextInput:
            id: ticker_text
            text: 'New notification'
            size_hint: 1, None


<NotificationRadiator>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        TextInput:
            id: notification_title
            text: 'Hallo What-The-Mieter'
            size_hint: 1, None
        TextInput:
            id: notification_text
            text: 'Sind die Fenster zu? Folgender Heizkoerper heizt stark: '
            size_hint: 1, None
        TextInput:
            id: ticker_text
            text: 'New notification'
            size_hint: 1, None

